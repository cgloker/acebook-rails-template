<h2> Friends </h2>


  <% @friendship.each do |friend| %>
        <ul>
          <li><%= friend.status %></li>
          <li><%= friend.friend.username %></li>
        </ul>
  <% end %>
<h2> people who have requested </h2>
  <% @inversefriendship.each do |friend| %>
        <ul>
          <li><%= friend.status %></li>
          <li><%= friend.user.username %><%= link_to "Accept Friend", accept_friendship_path(:friend_id => friend.id, :user_id => current_user.id), :method => :put %></li>

        </ul>
  <% end %>

 