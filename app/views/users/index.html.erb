<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user != current_user %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><strong><%= user.username %></strong> <%= link_to 'Show', user %> <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %></td>
          <div class="clear"></div>        
        </tr>
      <% end %>
    <% end %>
  </tbody>


</table>

<br>

<%= link_to 'New User', new_user_path %>
